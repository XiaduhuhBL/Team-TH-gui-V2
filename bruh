-- T00kshaf1y's F3X GUI v2 (Mobile-Compatible Draggable Border)
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui", 60)
local UserInputService = game:GetService("UserInputService")

-- Main GUI Container
local MainGui = Instance.new("ScreenGui")
MainGui.Name = "T00kshaf1y_F3X_GUI"
MainGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
MainGui.Parent = PlayerGui

-- Main Frame (Draggable Border)
local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainContainer"
MainFrame.Size = UDim2.new(0.85, 0, 0.8, 0)
MainFrame.Position = UDim2.new(0.075, 0, 0.1, 0)
MainFrame.BackgroundColor3 = Color3.new(0.1, 0.3, 0.8)
MainFrame.BorderSizePixel = 5 -- Draggable border thickness
MainFrame.BorderColor3 = Color3.new(0.05, 0.2, 0.6)
MainFrame.ClipsDescendants = true
MainFrame.Parent = MainGui

-- Cyan Background + Background Image
local BackgroundLayer = Instance.new("Frame")
BackgroundLayer.Name = "BackgroundLayer"
BackgroundLayer.Size = UDim2.new(1, -10, 1, -10)
BackgroundLayer.Position = UDim2.new(0, 5, 0, 5)
BackgroundLayer.BackgroundColor3 = Color3.new(0.15, 0.8, 0.8) -- Cyan background
BackgroundLayer.Parent = MainFrame

local BgImage = Instance.new("ImageLabel")
BgImage.Name = "BgImage"
BgImage.Size = UDim2.new(1, 0, 1, 0)
BgImage.Image = "rbxassetid://111744606274727"
