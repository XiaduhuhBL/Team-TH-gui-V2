end

-- Page 2 (130 Buttons)
local Page2 = Instance.new("ScrollingFrame")
Page2.Name = "Page2"
Page2.Size = UDim2.new(1, -20, 1, -180)
Page2.Position = UDim2.new(0, 10, 0, 170)
Page2.BackgroundColor3 = Color3.new(0.1, 0.7, 0.7)
