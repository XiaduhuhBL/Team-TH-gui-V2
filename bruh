Page2Layout.Name = "Page2Layout"
Page2Layout.Parent = Page2
Page2Layout.CellSize = UDim2.new(0, 140, 0, 45)
Page2Layout.CellPadding = UDim2.new(0, 12, 0, 8)
Page2Layout.SortOrder = Enum.SortOrder.LayoutOrder
Page2Layout.Padding = UDim.new(0, 10)

-- Generate 130 Buttons for Page 2 (full syntax: local newButton = Instance.new("TextButton"))
for i = 1, 130 do
    local newButton = Instance.new("TextButton")
    newButton.Name = "Page2_Button_" .. i
    newButton.Size = UDim2.new(1, 0, 1, 0)
    newButton.BackgroundColor3 = Color3.new(0.15, 0.5, 0.9)
    newButton.Text = "P2 Button " .. i
    newButton.TextColor3 = Color3.new(1, 1, 1)
    newButton.TextScaled = true
    newButton.LayoutOrder = i
    newButton.Parent = Page2
end

-- Page Switch Logic
Page1Btn.MouseButton1Click:Connect(function()
    Page1.Visible = true
    Page2.Visible = false
    Page1Btn.BackgroundColor3 = Color3.new(0.1, 0.3, 0.8)
    Page2Btn.BackgroundColor3 = Color3.new(0.4, 0.4, 0.4)
end)

Page2Btn.MouseButton1Click:Connect(function()
    Page1.Visible = false
    Page2.Visible = true
    Page1Btn.BackgroundColor3 = Color3.new(0.4, 0.4, 0.4)
    Page2Btn.BackgroundColor3 = Color3.new(0.1, 0.3, 0.8)
end)

-- Mobile-Only Draggable Border Logic
local isDragging = false
local dragStartPos = Vector2.new()
local frameStartPos = UDim2.new()
local borderThickness = MainFrame.BorderSizePixel

MainFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.Touch then
        local touchPos = input.Position
        local frameAbsPos = MainFrame.AbsolutePosition
        local frameAbsSize = MainFrame.AbsoluteSize
        
        local isOnBorder = (
            touchPos.X - frameAbsPos.X <= borderThickness or
            frameAbsPos.X + frameAbsSize.X - touchPos.X <= borderThickness or
            touchPos.Y - frameAbsPos.Y <= borderThickness or
            frameAbsPos.Y + frameAbsSize.Y - touchPos.Y <= borderThickness
        )
        
        if isOnBorder then
            isDragging = true
            dragStartPos = touchPos
            frameStartPos = MainFrame.Position
        end
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if isDragging and input.UserInputType == Enum.UserInputType.Touch then
        local offset = input.Position - dragStartPos
        MainFrame.Position = UDim2.new(
            frameStartPos.X.Scale, frameStartPos.X.Offset + offset.X,
            frameStartPos.Y.Scale, frameStartPos.Y.Offset + offset.Y
        )
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.Touch then
        isDragging = false
    end
end)

UserInputService.InputCancelled:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.Touch then
        isDragging = false
    end
end)

print("[T00kshaf1y GUI] Loaded Successfully - Mobile Draggable Border Enabled")
